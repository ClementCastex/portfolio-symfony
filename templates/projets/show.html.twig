{% extends 'base.html.twig' %}

{% block title %}Détails du Projet{% endblock %}

{% block body %}
<h1>Détails du Projet</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">{{ projet.title }}</h5>
        <p class="card-text">{{ projet.description }}</p>
        <img src="{{ asset('uploads/images/' ~ projet.image) }}" alt="{{ projet.title }}" class="img-fluid" />
        <p class="card-text"><small class="text-muted">Catégorie: {{ projet.category.name }}</small></p>
    </div>
</div>

<a href="{{ path('api_projets_edit', {'id': projet.id}) }}" class="btn btn-primary">Modifier</a>
<a href="{{ path('api_projets_index') }}" class="btn btn-secondary">Retour à la liste</a>
{% endblock %}
